@model List<CachedWord>

@{
    ViewBag.Title = "History";
}


<style>
    myform {
        position: absolute;
        z-index:0;
        max-width: 400px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    body {
        background-color: #f8f9fa;
    }

    h1 {
        color: #007bff;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border: 1px solid #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border: 1px solid #0056b3;
        }
</style>


<div class="row Canvas">

    <div class="col-md-12">


        <myform class=" mycard">
            <h1>@ViewBag.Title</h1>
            <ul class="ScrollStyle">
                @if (Model.Count() == 0)
                {
                    <li>
                        <p>No History<br></p>
                    </li>
                }
                else
                {
                    foreach (var word in Model)
                    {
                        <li>

                            <a asp-action="SearchById" asp-controller="Home" asp-route-wordId=@word.WordId class ="btn btn-primary py-2">@word.Word</a>
                            <br></br>
                        </li>
                    }
                }
            </ul>
            <form class="clrBtn" asp-action="ClearCache" asp-controller="history" method="post">
                <button class="btn btn-danger" type="submit">Clear</button>
            </form>
        </myform>
        
    </div>

    <div>
    </div>
</div>