@model Word;
@{
	ViewData["Title"] = "Dictionary";
}

<h1></h1>Dictionary


<div>
	<a class="btn btn-primary" asp-method="get" asp-action="register" asp-controller="account" >Register</a>
	<a class="btn btn-primary" asp-method="get" asp-action="login" asp-controller="account" >LogIn</a>
</div>
<div class="row">
	<div class="col-md-12">
		<form asp-controller="Home" asp-action="Search" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>



			<div class="form-group">
				<input asp-for="@Model.word" class="form-control" />
			</div>

			<div>
				<button class="btn btn-primary" type="submit">Search</button>
			</div>
		</form>
	</div>
</div>
