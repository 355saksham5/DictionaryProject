@model Definition

@{
    ViewBag.Title = "Definition";
}


<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        color: #007bff;
    }

    myform {
        position: absolute;
        z-index: 0;
        max-width: 400px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border: 1px solid #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border: 1px solid #0056b3;
        }
</style>


<div class="row Canvas">

    <div class="col-md-12">


        <myform class=" mycard">
            <h1>Meaning</h1>
           <div class="ScrollStyle"> 
                <p><b>@Model.PartOfSpeech?.Name</b></p><br>
                <p><b>Definition:</b>@Model.DefinitionText</p><br>
                <p><b>Example:</b>@Model.Example</p><br>
           </div>

        </myform>
    </div>

    <div>
    </div>
</div>