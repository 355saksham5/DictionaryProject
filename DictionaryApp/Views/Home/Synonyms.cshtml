@model IEnumerable<string>

@{
    ViewBag.Title = "Synonyms";
}


<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        color: #007bff;
    }

    form {
        max-width: 400px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border: 1px solid #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border: 1px solid #0056b3;
        }
</style>


<div class="row Canvas">

    <div class="col-md-12">


        <form class=" mycard">
            <h1>Synonyms</h1>
            <ul class="ScrollStyle">
                 @if(Model.Count()==0){
                    <li>
                        <p>No word<br></p>
                    </li>
                }
                else {foreach (var synonym in Model)
                {
                    <li>
                        <p>@synonym<br></p>
                    </li>
                }}
            </ul>
        </form>
    </div>

    <div>
    </div>
</div>